{
  "compilerOptions": {
      "allowSyntheticDefaultImports":true,
      "experimentalDecorators": true,
      "rootDir": "src",
      "outDir": "dist",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "lib": ["es6","dom"],
      "paths": {
          "@/*": ["./src/*"]
      },
      "typeRoots": [
          "./global.d.ts"
      ]
  },
  "include": [
      "./src/**/*",
      "global.d.ts"
  ],
  "exclude": [
      "node_modules",
  ]
}

